<in.workarounds.instimap.views.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:dragView="@+id/dragView"
    sothree:panelHeight="0dp"
    sothree:paralaxOffset="140dp"
    sothree:shadowHeight="4dp">

    <!-- MAIN CONTENT -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/bar_view"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true">

            <!--<include layout="@layout/bar_view_layout" />-->

        </RelativeLayout>
        <in.workarounds.instimap.views.mapview.CampusMapView
            android:id="@+id/campusMapView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/bar_view"
            android:paddingTop="48dp" />

    </RelativeLayout>

    <!-- SLIDING LAYOUT -->
    <include layout="@layout/layout_card" />

</in.workarounds.instimap.views.SlidingUpPanelLayout>