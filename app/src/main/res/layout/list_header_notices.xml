<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <ImageView
        android:id="@+id/icon_expand"
        android:layout_width="32dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:cropToPadding="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:contentDescription="list item"
        android:src="@drawable/ic_action_next_item"
        android:visibility="visible" />
    <!-- <TextView
        android:id="@+id/mark_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:text="Mark All"
        android:textColor="@android:color/darker_gray" />-->
    <in.workarounds.instimap.views.TypeFacedTextView
        android:id="@+id/lblListHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon_expand"
        android:padding="8dp"
        custom:typeFace="regular"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textSize="@dimen/index_header_text_size" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/list_item_seperator_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/list_item_seperator_white"/>

</RelativeLayout>